generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MessageRole {
  user
  assistant
}


model Conversation {
  id               String   @id @default(uuid())
  createdAt        DateTime @default(now())

  lastIntent       String?
  activeOrderId    String?
  activeInvoiceId  String?

  messages         Message[]
}


model Message {
  id             String       @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

model Order {
  id        String   @id
  status    String
  createdAt DateTime @default(now())
}

model Billing {
  invoiceNo    String   @id
  paymentState String
  createdAt    DateTime @default(now())
}
